<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	
	<!-- define engvdbf data source -->
	<persistence-unit name="engvdbf">
		<!-- If you are running in a production environment, add a managed data 
			source, the example data source is just for development and testing! -->
		<jta-data-source>java:jboss/datasources/engvdbf-DS</jta-data-source>
		<class>com.redhat.tools.vault.web.orgchart.User</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>
			<!-- Properties for Hibernate -->
			<property name="hibernate.hbm2ddl.auto" value="false" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.teiid.dialect.TeiidDialect" />
		</properties>
	</persistence-unit>
	<persistence-unit name="MyVtDS">
		 <properties>
		 	 <property name="hibernate.ejb.cfgfile" value="/hibernate_vault.cfg.xml"/> 
		 </properties> 
	</persistence-unit>
</persistence>